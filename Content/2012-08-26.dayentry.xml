&lt;div style="border: #000080 1px solid; color: #000; font-family: 'Courier New', Courier, Monospace; font-size: 10pt"&gt;
&lt;div style="background-color: #ffffff; max-height: 400px; overflow: auto; padding: 2px 5px;"&gt; &lt;span style="color:#008000"&gt;//Drops database and recreates if model changes&lt;/span&gt;&lt;br&gt;
            System.Data.Entity.&lt;span style="color:#2b91af"&gt;Database&lt;/span&gt;.SetInitializer(&lt;span style="color:#0000ff"&gt;new&lt;/span&gt; System.Data.Entity.&lt;span style="color:#2b91af"&gt;DropCreateDatabaseIfModelChanges&lt;/span&gt;&amp;lt;TestMVCApp2.Models.&lt;span style="color:#2b91af"&gt;TestMVCApp2Context&lt;/span&gt;&amp;gt;());&lt;/div&gt;
