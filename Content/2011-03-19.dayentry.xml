      <Content>&lt;p&gt;ValidationSummary(false)&lt;/p&gt;  &lt;p&gt;&lt;a href="http://www.programgood.net/content/binary/WindowsLiveWriter/ValidationMVC3_97F4/image_4.png"&gt;&lt;img style="border-right-width: 0px; display: inline; border-top-width: 0px; border-bottom-width: 0px; border-left-width: 0px" title="image" border="0" alt="image" src="http://www.programgood.net/content/binary/WindowsLiveWriter/ValidationMVC3_97F4/image_thumb_1.png" width="599" height="295" /&gt;&lt;/a&gt; &lt;/p&gt;  &lt;h3&gt;View (no javascript)&lt;/h3&gt;  &lt;div id="codeSnippetWrapper"&gt;   &lt;pre style="border-bottom-style: none; text-align: left; padding-bottom: 0px; line-height: 12pt; border-right-style: none; background-color: #f4f4f4; margin: 0em; padding-left: 0px; width: 100%; padding-right: 0px; font-family: &amp;#39;Courier New&amp;#39;, courier, monospace; direction: ltr; border-top-style: none; color: black; font-size: 8pt; border-left-style: none; overflow: visible; padding-top: 0px" id="codeSnippet"&gt;@model datePickerTemp2.Models.PersonEditModel&lt;br /&gt;&lt;br /&gt;@Model.MessageToDisplay&lt;br /&gt;&lt;br /&gt;@&lt;span style="color: #0000ff"&gt;using&lt;/span&gt; (Html.BeginForm()) {&lt;br /&gt;    @Html.ValidationSummary(&lt;span style="color: #0000ff"&gt;false&lt;/span&gt;)&lt;br /&gt;    &amp;lt;fieldset&amp;gt;&lt;br /&gt;        &amp;lt;legend&amp;gt;Person&amp;lt;/legend&amp;gt;&lt;br /&gt;&lt;br /&gt;        &amp;lt;div &lt;span style="color: #0000ff"&gt;class&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;editor-label&amp;quot;&lt;/span&gt;&amp;gt;&lt;br /&gt;            @Html.LabelFor(m =&amp;gt; m.Person.FirstName)&lt;br /&gt;        &amp;lt;/div&amp;gt;&lt;br /&gt;        &amp;lt;div &lt;span style="color: #0000ff"&gt;class&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;editor-field&amp;quot;&lt;/span&gt;&amp;gt;&lt;br /&gt;            @Html.EditorFor(m =&amp;gt; m.Person.FirstName)&lt;br /&gt;            @Html.ValidationMessageFor(m =&amp;gt; m.Person.FirstName, &lt;span style="color: #006080"&gt;&amp;quot;You must enter a First Name&amp;quot;&lt;/span&gt;)&lt;br /&gt;        &amp;lt;/div&amp;gt;&lt;br /&gt;&lt;/pre&gt;

  &lt;br /&gt;&lt;/div&gt;

&lt;p&gt;&lt;/p&gt;

&lt;p&gt;&lt;/p&gt;

&lt;h3&gt;Model:&lt;/h3&gt;

&lt;div id="codeSnippetWrapper"&gt;
  &lt;pre style="border-bottom-style: none; text-align: left; padding-bottom: 0px; line-height: 12pt; border-right-style: none; background-color: #f4f4f4; margin: 0em; padding-left: 0px; width: 100%; padding-right: 0px; font-family: &amp;#39;Courier New&amp;#39;, courier, monospace; direction: ltr; border-top-style: none; color: black; font-size: 8pt; border-left-style: none; overflow: visible; padding-top: 0px" id="codeSnippet"&gt;&lt;span style="color: #0000ff"&gt;public&lt;/span&gt; &lt;span style="color: #0000ff"&gt;class&lt;/span&gt; Person&lt;br /&gt;{&lt;br /&gt;    [Required]&lt;br /&gt;    &lt;span style="color: #0000ff"&gt;public&lt;/span&gt; &lt;span style="color: #0000ff"&gt;string&lt;/span&gt; FirstName { get; set; }&lt;br /&gt;    [DataType(DataType.Date)]&lt;br /&gt;    &lt;span style="color: #0000ff"&gt;public&lt;/span&gt; DateTime DateOfBirth { get; set; }&lt;br /&gt;}&lt;/pre&gt;

  &lt;br /&gt;&lt;/div&gt;

&lt;h3&gt;View (javascript)&lt;/h3&gt;

&lt;div&gt;
  &lt;pre style="border-bottom-style: none; text-align: left; padding-bottom: 0px; line-height: 12pt; border-right-style: none; background-color: #f4f4f4; margin: 0em; padding-left: 0px; width: 100%; padding-right: 0px; font-family: &amp;#39;Courier New&amp;#39;, courier, monospace; direction: ltr; border-top-style: none; color: black; font-size: 8pt; border-left-style: none; overflow: visible; padding-top: 0px" id="codeSnippet"&gt;@model datePickerTemp2.Models.PersonEditModel&lt;br /&gt;&lt;br /&gt;&amp;lt;script src=&lt;span style="color: #006080"&gt;&amp;quot;@Url.Content(&amp;quot;&lt;/span&gt;~/Scripts/jquery.validate.min.js&lt;span style="color: #006080"&gt;&amp;quot;)&amp;quot;&lt;/span&gt; type=&lt;span style="color: #006080"&gt;&amp;quot;text/javascript&amp;quot;&lt;/span&gt;&amp;gt;&amp;lt;/script&amp;gt;&lt;br /&gt;&amp;lt;script src=&lt;span style="color: #006080"&gt;&amp;quot;@Url.Content(&amp;quot;&lt;/span&gt;~/Scripts/jquery.validate.unobtrusive.min.js&lt;span style="color: #006080"&gt;&amp;quot;)&amp;quot;&lt;/span&gt; type=&lt;span style="color: #006080"&gt;&amp;quot;text/javascript&amp;quot;&lt;/span&gt;&amp;gt;&amp;lt;/script&amp;gt;&lt;br /&gt;&lt;br /&gt;@Model.MessageToDisplay&lt;br /&gt;&lt;br /&gt;@&lt;span style="color: #0000ff"&gt;using&lt;/span&gt; (Html.BeginForm()) {&lt;br /&gt;    @Html.ValidationSummary(&lt;span style="color: #0000ff"&gt;true&lt;/span&gt;)&lt;br /&gt;    &amp;lt;fieldset&amp;gt;&lt;br /&gt;        &amp;lt;legend&amp;gt;Person&amp;lt;/legend&amp;gt;&lt;br /&gt;&lt;br /&gt;        &amp;lt;div &lt;span style="color: #0000ff"&gt;class&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;editor-label&amp;quot;&lt;/span&gt;&amp;gt;&lt;br /&gt;            @Html.LabelFor(m =&amp;gt; m.Person.FirstName)&lt;br /&gt;        &amp;lt;/div&amp;gt;&lt;br /&gt;        &amp;lt;div &lt;span style="color: #0000ff"&gt;class&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;editor-field&amp;quot;&lt;/span&gt;&amp;gt;&lt;br /&gt;            @Html.EditorFor(m =&amp;gt; m.Person.FirstName)&lt;br /&gt;            @Html.ValidationMessageFor(m =&amp;gt; m.Person.FirstName, &lt;span style="color: #006080"&gt;&amp;quot;You must enter a First Name&amp;quot;&lt;/span&gt;)&lt;br /&gt;        &amp;lt;/div&amp;gt;&lt;br /&gt;&lt;br /&gt;        &amp;lt;div &lt;span style="color: #0000ff"&gt;class&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;editor-label&amp;quot;&lt;/span&gt;&amp;gt;&lt;br /&gt;            @Html.LabelFor(m =&amp;gt; m.Person.DateOfBirth)&lt;br /&gt;        &amp;lt;/div&amp;gt;&lt;br /&gt;        &amp;lt;div &lt;span style="color: #0000ff"&gt;class&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;editor-field&amp;quot;&lt;/span&gt;&amp;gt;&lt;br /&gt;            @Html.EditorFor(m =&amp;gt; m.Person.DateOfBirth)&lt;br /&gt;            @Html.ValidationMessageFor(m =&amp;gt; m.Person.DateOfBirth)&lt;br /&gt;        &amp;lt;/div&amp;gt;&lt;br /&gt;        &amp;lt;p&amp;gt;&lt;br /&gt;            &amp;lt;input type=&lt;span style="color: #006080"&gt;&amp;quot;submit&amp;quot;&lt;/span&gt; &lt;span style="color: #0000ff"&gt;value&lt;/span&gt;=&lt;span style="color: #006080"&gt;&amp;quot;Save&amp;quot;&lt;/span&gt; /&amp;gt;&lt;br /&gt;        &amp;lt;/p&amp;gt;&lt;br /&gt;    &amp;lt;/fieldset&amp;gt;&lt;/pre&gt;
&lt;/div&gt;

&lt;div&gt;&amp;#160;&lt;/div&gt;

&lt;div&gt;ValidationSummary(true)&lt;/div&gt;

&lt;div&gt;
  &lt;br /&gt;&lt;/div&gt;

&lt;p&gt;&lt;a href="http://www.programgood.net/content/binary/WindowsLiveWriter/ValidationMVC3_97F4/image_6.png"&gt;&lt;img style="border-right-width: 0px; display: inline; border-top-width: 0px; border-bottom-width: 0px; border-left-width: 0px" title="image" border="0" alt="image" src="http://www.programgood.net/content/binary/WindowsLiveWriter/ValidationMVC3_97F4/image_thumb_2.png" width="438" height="247" /&gt;&lt;/a&gt; &lt;/p&gt;

&lt;p&gt;There will be no postback if a firstname is blank.&amp;#160; DateOfBirth uses postback, however you have to have FirstName passing before it will actually postback.&lt;/p&gt;</Content>
